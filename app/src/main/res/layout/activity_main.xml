<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eggon.androidd.testlibrary.activity.MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/diagonal_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Diagonal activity" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/panorama_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Panorama activity" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/isometric_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Isometric activity" />


</LinearLayout>